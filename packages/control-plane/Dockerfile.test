FROM node:22-slim
RUN apt-get update && apt-get install -y --no-install-recommends libc++1 && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY package.json package-lock.json ./
COPY packages/shared/package.json packages/shared/
COPY packages/control-plane/package.json packages/control-plane/
RUN npm ci --workspace=@open-inspect/shared --workspace=@open-inspect/control-plane
COPY packages/shared/ packages/shared/
COPY packages/control-plane/ packages/control-plane/
COPY terraform/d1/migrations/ terraform/d1/migrations/
RUN npm run build -w @open-inspect/shared
CMD ["npm", "run", "test:integration", "-w", "@open-inspect/control-plane"]
